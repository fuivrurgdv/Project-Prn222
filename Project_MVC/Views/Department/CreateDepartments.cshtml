@model Project_MVC.Models.Department.DepartmentRequest
@{
    ViewData["Title"] = "Thêm phòng ban mới";
}

<h1>Thêm phòng ban mới</h1>

<form asp-controller="Department"  asp-action="CreateDepartments" method="post">
    <div class="form-group">
        <label asp-for="DepartmentName" class="form-label">Tên phòng ban</label>
        <input asp-for="DepartmentName" class="form-control" />
        <span asp-validation-for="DepartmentName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AdressDepartment" class="form-label">Địa chỉ</label>
        <input asp-for="AdressDepartment" class="form-control" />
        <span asp-validation-for="AdressDepartment" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="form-label">Mô tả</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Thêm</button>
    <a class="btn btn-primary mt-3" asp-action="GetDepartments" asp-controller="Department">Về trang phòng ban</a>
</form>